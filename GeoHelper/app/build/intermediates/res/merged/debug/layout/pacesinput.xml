<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_gravity="bottom"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignBottom="@+id/submit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Leg"
        android:id="@+id/addButton"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Paces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p5"
        android:layout_alignBaseline="@+id/pace5"
        android:layout_alignBottom="@+id/pace5"
        android:layout_alignRight="@+id/leg5"
        android:layout_alignEnd="@+id/leg5" />

    <TextView
        android:text="Bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a5"
        android:layout_below="@+id/leg5"
        android:layout_alignLeft="@+id/p5"
        android:layout_alignStart="@+id/p5" />

    <TextView
        android:text="Paces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4"
        android:layout_alignBaseline="@+id/pace4"
        android:layout_alignBottom="@+id/pace4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Paces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2"
        android:layout_alignBaseline="@+id/pace2"
        android:layout_alignBottom="@+id/pace2"
        android:layout_alignRight="@+id/leg3"
        android:layout_alignEnd="@+id/leg3" />

    <TextView
        android:text="Bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a1"
        android:layout_alignBottom="@+id/notation1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_above="@+id/reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="486dp" />

    <TextView
        android:text="Paces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1"
        android:layout_alignBaseline="@+id/pace1"
        android:layout_alignBottom="@+id/pace1"
        android:layout_alignRight="@+id/leg5"
        android:layout_alignEnd="@+id/leg5" />

    <TextView
        android:text="Leg 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leg1"
        android:textAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/notation2"
        android:layout_below="@+id/pace1"
        android:layout_alignLeft="@+id/pace1"
        android:layout_alignStart="@+id/pace1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/notation4"
        android:layout_below="@+id/pace3"
        android:layout_alignLeft="@+id/pace3"
        android:layout_alignStart="@+id/pace3" />

    <TextView
        android:text="Bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a4"
        android:layout_alignBottom="@+id/notation4"
        android:layout_alignLeft="@+id/leg4"
        android:layout_alignStart="@+id/leg4" />

    <TextView
        android:text="Leg 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leg4"
        android:textAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_below="@+id/pace3"
        android:layout_alignLeft="@+id/p2"
        android:layout_alignStart="@+id/p2" />

    <TextView
        android:text="Paces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3"
        android:layout_below="@+id/notation3"
        android:layout_alignRight="@+id/leg4"
        android:layout_alignEnd="@+id/leg4"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Leg 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leg5"
        android:textAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_alignTop="@+id/notation5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/notation1"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pace1"
        android:layout_below="@+id/notation1"
        android:layout_alignLeft="@+id/notation1"
        android:layout_alignStart="@+id/notation1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pace2"
        android:layout_below="@+id/notation2"
        android:layout_alignLeft="@+id/notation2"
        android:layout_alignStart="@+id/notation2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/notation3"
        android:layout_below="@+id/pace2"
        android:layout_alignLeft="@+id/pace2"
        android:layout_alignStart="@+id/pace2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pace3"
        android:layout_alignBaseline="@+id/p3"
        android:layout_alignBottom="@+id/p3"
        android:layout_alignLeft="@+id/notation3"
        android:layout_alignStart="@+id/notation3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pace4"
        android:layout_below="@+id/notation4"
        android:layout_alignLeft="@+id/notation4"
        android:layout_alignStart="@+id/notation4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/notation5"
        android:layout_below="@+id/pace4"
        android:layout_alignLeft="@+id/pace4"
        android:layout_alignStart="@+id/pace4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pace5"
        android:layout_below="@+id/notation5"
        android:layout_alignLeft="@+id/notation5"
        android:layout_alignStart="@+id/notation5" />

    <TextView
        android:text="Bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2"
        android:layout_above="@+id/pace2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Leg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leg2"
        android:textAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_below="@+id/pace1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Leg 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leg3"
        android:textAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_below="@+id/pace2"
        android:layout_alignLeft="@+id/p1"
        android:layout_alignStart="@+id/p1" />

    <TextView
        android:text="Bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3"
        android:layout_alignBottom="@+id/notation3"
        android:layout_alignLeft="@+id/p3"
        android:layout_alignStart="@+id/p3" />

</RelativeLayout>