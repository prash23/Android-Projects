<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Trigonometric_River">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/toolbar_layout">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/toolbar_layout">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:paddingTop="10dp"
        android:src="@drawable/pythagorean"
        android:layout_below="@+id/toolbar_layout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/imageView">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Side B"
            android:id="@+id/textView22" />

      <!--  <android.support.design.widget.TextInputLayout
        android:id="@+id/SideA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TextInputLayout>-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/enterB"
            android:layout_below="@+id/sideA"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter angle BC"
            android:id="@+id/textView23" />

        <!--<android.support.design.widget.TextInputLayout
        android:id="@+id/AngleAC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/enterBC"
            android:layout_below="@+id/angleBC"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    <!--</android.support.design.widget.TextInputLayout>-->

        <Button android:id="@+id/Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go"
            android:background="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"/>
        </LinearLayout>

</LinearLayout>
</RelativeLayout>